<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDiary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/b_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userPfp"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/b_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/createdOnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/b_margin"
            android:layout_marginTop="@dimen/b_margin"
            android:layout_marginEnd="@dimen/b_margin"
            android:fontFamily="serif"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/b_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/updatedAtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/b_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/b_margin"
            android:layout_marginBottom="8dp"
            android:text="Updated"
            android:textColor="@color/black" />

        <com.akigon.mydiary.RichEditor
            android:id="@+id/mywebview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/b_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/b_margin"
            android:background="#cacaca" />

        <TextView
            android:id="@+id/tagsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/b_margin"
            android:text="Tags"
            android:textColor="@color/black" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>